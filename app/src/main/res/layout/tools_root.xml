<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rebooter_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:onClick="rebooter_r">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/rebooter_r_ic"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rebooter_r" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/rebooter_r_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rebooter_r"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/rebooter_r_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rebooter_sub_r"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item1r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/item1r_ic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/item1r_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="root tool"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/item1r_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="root tool"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item2r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/item2r_ic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/item2r_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="root tool"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/item2r_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="root tool"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </ScrollView>